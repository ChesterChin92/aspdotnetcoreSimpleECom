@model Jinkuten.Models.ViewModelProduct

@{
    ViewData["Title"] = "ShowAllProduct";
}

<h2>Product</h2>

<p>
    <a asp-action="AddProduct">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ProductName
            </th>
            <th>
                ProductPrice
            </th>
            <th>
                Description
            </th>
            <th>
               ProductPublishedDate
            </th>
            <th>
               ImageName
            </th>
            <th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPublishedDate)
            </td>
            <td>
                <img src="~/images/@item.ImageName" height="100px" width="auto">
            </td>
            <td>
                @if (item.AspNetUsersId == @Model.Id)
                {
                    <a asp-action="UpdateProduct" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="DeleteProduct" asp-route-id="@item.Id">Delete</a>
                }

                <a asp-action="ShowAllFeedback" asp-route-id="@item.Id">Feedback</a> |
                <a asp-action="AddCart" asp-route-id="@item.Id">Cart</a> |
                <a asp-action="AddWishList" asp-route-id="@item.Id">WishList</a>

            </td>
        </tr>
}
    </tbody>
</table>
